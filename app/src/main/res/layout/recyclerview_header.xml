<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/header_relative"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="20dp"
    android:layout_marginBottom="10dp"
    android:background="@color/gang"
    android:gravity="center">

        <RelativeLayout
            android:id="@+id/card_re"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/imageView5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:scaleType="fitStart"
                    app:srcCompat="@drawable/header_back" />

                <android.support.v7.widget.CardView
                    android:id="@+id/card"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    android:layout_marginLeft="35dp"
                    android:layout_marginRight="35dp"
                    android:layout_marginTop="20dp"
                    app:cardCornerRadius="3dp"
                    app:cardElevation="5dp">

                        <com.bangbang.taskhall.BannerView
                            android:id="@+id/banner"
                            android:layout_width="match_parent"
                            android:layout_height="180dp"
                            android:layout_weight="0">

                        </com.bangbang.taskhall.BannerView>

                        <!--                <com.bangbang.taskhall.myBanner
                    android:id="@+id/banner"
                    android:layout_width="match_parent"
                    android:layout_height="160dp"
                    android:layout_weight="0">
                </com.bangbang.taskhall.myBanner>-->

                </android.support.v7.widget.CardView>
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/li"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/card_re"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:visibility="visible">

                <LinearLayout
                    android:id="@+id/btn_release"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                        <ImageView
                            android:id="@+id/imageView4"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:layout_weight="0"
                            android:adjustViewBounds="true"
                            android:cropToPadding="true"
                            android:scaleType="centerInside"
                            app:srcCompat="@drawable/release" />

                        <TextView
                            android:id="@+id/textView9"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="0"
                            android:gravity="center"
                            android:text="发任务"
                            android:textColor="@android:color/black"
                            android:textSize="10sp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/btn_myreceived"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                        <ImageView
                            android:id="@+id/imeView3"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:layout_weight="0"
                            android:adjustViewBounds="true"
                            android:cropToPadding="true"
                            android:scaleType="centerInside"
                            app:srcCompat="@drawable/received" />

                        <TextView
                            android:id="@+id/textView8"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="0"
                            android:gravity="center"
                            android:text="已接受"
                            android:textColor="@android:color/black"
                            android:textSize="10sp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/btn_myreleased"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                        <ImageView
                            android:id="@+id/imageView3"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:layout_weight="0"
                            android:adjustViewBounds="true"
                            android:cropToPadding="true"
                            android:scaleType="centerInside"
                            app:srcCompat="@drawable/released" />

                        <TextView
                            android:id="@+id/texew8"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="0"
                            android:gravity="center"
                            android:text="已发布"
                            android:textColor="@android:color/black"
                            android:textSize="10sp" />
                </LinearLayout>

        </LinearLayout>


</RelativeLayout>



